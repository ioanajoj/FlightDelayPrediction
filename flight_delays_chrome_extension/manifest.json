{
    "name": "Flight Delay Prediction",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "js": [ "jquery-3.5.1.min.js", "moment.js", "content.js" ],
            "css": ["style.css"],
            "matches": ["https://www.skyscanner.com/transport/*"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Prediction Manual Input"
    },
    "permissions": [
        "tabs", "activeTab", "http://127.0.0.1:8000/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}